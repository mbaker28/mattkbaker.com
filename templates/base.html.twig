<!DOCTYPE html>
<html lang="en" style="color-scheme: auto;">
    <head>
        {% block head %}
            <meta charset="UTF-8">
            <meta name="viewport" content="width=device-width, initial-scale=1.0">
            <title>{% block title %}Matthew Baker{% endblock %}</title>
            <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
            {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
            {% block stylesheets %}
                {{ entry_style_tags('app') }}
                {{ entry_style_tags('app-dark') }}
            {% endblock %}

            {% block javascripts %}
                <script src="https://kit.fontawesome.com/2736e4c60a.js" crossorigin="anonymous"></script>
                {{ entry_script_tags('app') }}
            {% endblock %}
        {% endblock %}
    </head>
    <body class="colorscheme-auto">
        <div class="float-container">
            <div>
                <a id="download-resume" href="/static/resume.docx"><i class="fa-solid fa-cloud-arrow-down"></i> Download Resume</a>
            </div>
            <div data-controller="dark-mode-toggle">
                <a id="dark-mode-toggle" class="colorscheme-toggle" data-action="click->dark-mode-toggle#toggle">
                    <i class="fa fa-adjust fa-fw"></i>
                </a>
            </div>
        </div>
        <main class="wrap">
            <nav class="navigation">
                <section class="container">
                    {% block header %}
                        <a id="nav-title" href="/">{% block nav_title %}Matthew Baker{% endblock %}</a>
                        <input type="checkbox" id="menu-toggle">
                        <label class="menu-button float-right" for="menu-toggle">
                            <i class="fa fa-bars fa-fw"></i>
                        </label>
                        <label class="menu-close float-right" for="menu-toggle">
                            <i class="fa fa-solid fa-xmark"></i>
                        </label>
                        <ul id="nav-list">
                            {% block nav_list %}
                                <li class="nav-item">
                                    <a class="nav-link" href="/">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/experience">Experience</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/projects">Projects</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/contact">Contact</a>
                                </li>
                            {% endblock %}
                        </ul>
                    {% endblock %}
                </section>
            </nav>
            <div class="content">
                {% block content %}{% endblock %}
            </div>
            <footer class="footer">
                {% block footer %}
                    <section class="container flex-column">
                        <div>
                            <ul>
                                <li>
                                    <a href="https://github.com/mbaker28" title="GitHub">
                                        <i class="fa fa-2x fa-github"></i>
                                    </a>
                                </li>
                                <li>
                                    <a href="https://linkedin.com/in/matthew-baker94/" title="LinkedIn">
                                        <i class="fa fa-2x fa-linkedin"></i>
                                    </a>
                                </li>
                                <li>
                                    <a href="mailto:mattbakerk@gmail.com" title="Email">
                                        <i class="fa fa-2x fa-envelope"></i>
                                    </a>
                                </li>
                            </ul>
                        </div>
                        <div>
                            &copy; {{ "now"|date("Y") }} Matthew K. Baker
                        </div>
                    </section>
                {% endblock %}
            </footer>
        </main>
    </body>
</html>
