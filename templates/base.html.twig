<!DOCTYPE html>
<html>
    <head>
        {% block head %}
            <meta charset="UTF-8">
            <title>{% block title %}Matthew Baker{% endblock %}</title>
            <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
            {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
            {% block stylesheets %}
                {{ entry_style_tags('app') }}
            {% endblock %}

            {% block javascripts %}
                {{ entry_script_tags('app') }}
            {% endblock %}
        {% endblock %}
    </head>
    <body>
        <main class="wrap">
            <nav class="navigation">
                <section class="container">
                    {% block header %}
                        <a id="nav-title" href="/">{% block nav_title %}Matthew Baker{% endblock %}</a>
                        <ul id="nav-list">
                        {% block nav_list %}
                            <li class="nav-item">
                                <a class="nav-link" href="/">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/projects">Projects</a>
                            </li>
                        {% endblock %}
                        </ul>
                    {% endblock %}
                </section>
            </nav>
            <section class="container">
                {% block content %}{% endblock %}
            </section>
            <section class="container">
                {% block footer %}{% endblock %}
            </section>
        </main>
    </body>
</html>
